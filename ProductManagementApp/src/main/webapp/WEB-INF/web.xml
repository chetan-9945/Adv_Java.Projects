<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>buyServlet</servlet-name>
        <servlet-class>com.product.servlets.BuyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>buyServlet</servlet-name>
        <url-pattern>/buyServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>buy</servlet-name>
        <servlet-class>com.product.servlets.BuyProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>buy</servlet-name>
        <url-pattern>/buy</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bill_servlet</servlet-name>
        <servlet-class>com.product.servlets.BillServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bill_servlet</servlet-name>
        <url-pattern>/bill_servlet</url-pattern>
    </servlet-mapping>

</web-app>
